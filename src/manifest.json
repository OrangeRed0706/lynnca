{
    "manifest_version": 3,
    "name": "Vue Chrome Extension",
    "version": "1.0.0",
    "description": "A Chrome extension built with Vue 3, TypeScript, and Tailwind CSS",
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "src/options/index.html",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["storage", "tabs"]
}
